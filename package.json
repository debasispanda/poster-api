{
  "name": "poster-api",
  "version": "1.0.0",
  "description": "Backend API for Poster",
  "main": "index.js",
  "scripts": {
    "init:db": "node scripts/setup.js",
    "init:db:dev": "node -r dotenv/config scripts/setup.js",
    "start": "node src/app.js",
    "start:dev": "nodemon -r dotenv/config src/app.js",
    "start:prod": "npm run init:db && npm run start",
    "format": "prettier --list-different ./src/**/*.js",
    "format:fix": "prettier --write ./src/**/*.js",
    "generate-config": "sh ./scripts/config.sh",
    "docker:build": "docker build -t poster_api .",
    "docker:start": "sh ./scripts/start.sh",
    "docker:clean": "sh ./scripts/remove.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/debasispanda/poster-api.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgres"
  ],
  "author": "Debasis Panda",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/debasispanda/poster-api/issues"
  },
  "homepage": "https://github.com/debasispanda/poster-api#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "connect-pg-simple": "^6.2.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1"
  }
}
